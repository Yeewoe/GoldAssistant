<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="11dp"
    android:paddingBottom="11dp"
    android:orientation="horizontal"
    android:background="@drawable/item_selector"
    android:paddingRight="12dp"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="56dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgvi_rank_pic"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginBottom="3dp"
            android:src="@drawable/broker_rank_1" />

        <TextView
            android:id="@+id/txt_rank_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X"
            android:textSize="18dp"
            android:textColor="@color/common_gray_5"/>
    </LinearLayout>

    <com.quark.http.image.CircularImage
        android:id="@+id/imgvi_head"
        android:layout_width="60dp"
        android:layout_height="60dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_broker_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="经纪人名称"
            android:textColor="@color/common_gray_5"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/txt_broker_fans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="粉丝数量"
            android:textColor="@color/common_gray_4"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/txt_broker_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="兼职类型"
            android:textColor="@color/common_gray_4"
            android:textSize="12dp" />


    </LinearLayout>

</LinearLayout>