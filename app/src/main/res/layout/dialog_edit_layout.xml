<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:clickable="true"
    android:orientation="vertical"
    android:padding="20.0dip" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/brownborder"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/title"
            android:layout_width="fill_parent"
            android:layout_height="50.0dip"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="成功注册"
            android:textSize="20.0dip"
            android:paddingTop="20dip"
            android:textColor="#FA8C2A"
            android:visibility="visible" />

        <EditText
            android:id="@+id/message"
            android:textSize="16.0dip"
            android:textColor="#666565"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:lineSpacingMultiplier="1.3"
            android:minHeight="60.0dip"
            android:paddingBottom="15.0dip"
            android:hint="说点什么吧"
            android:paddingLeft="20.0dip"
            android:paddingRight="20.0dip"
            android:paddingTop="15.0dip" 
            android:background="@null"
            />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:background="#ffffffff" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="60.0dip"
            android:layout_gravity="bottom"
            android:background="@null"
            android:gravity="center"
            android:layout_marginBottom="20.0dip"
            android:orientation="horizontal" 
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            >

            <Button
                android:id="@+id/positiveButton"
                style="@style/text_16_666666"
                android:layout_width="wrap_content"
                android:minWidth="120dip"
                android:layout_height="50.0dip"
                android:background="@drawable/btn_changingcolor_blue_pre"
                android:gravity="center"
                android:layout_marginRight="5dp"
                android:textSize="15sp"
                android:text="确定退出"
                android:textColor="#ffffff" />

            <Button  
                android:layout_marginLeft="5dp"
                android:id="@+id/negativeButton"  
                style="@style/text_16_666666"
              android:layout_width="wrap_content"
                android:minWidth="120dip"
                android:layout_height="50.0dip"
                android:background="@drawable/btn_hangingcolor_orange"
                android:gravity="center"
                android:text="点错了"
                android:textSize="15sp"
                android:textColor="#ffffff" />   

        </LinearLayout>
    </LinearLayout>

</FrameLayout>