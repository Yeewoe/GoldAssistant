<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.parttime.addresslist.userdetail.UserDetailActivity"
    android:orientation="vertical"
    android:visibility="gone">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:text="@string/user_performance"
        android:gravity="center"
        android:textSize="13sp"
        android:background="@color/user_detail_background"
        android:id="@+id/user_performance" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="9dp"
            android:paddingBottom="9dp"
            android:gravity="center_horizontal"
            android:background="@android:color/white">
            <CheckBox
                android:id="@+id/star1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                style="@style/Checkbox_redstar"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                />
            <CheckBox
                android:id="@+id/star2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                style="@style/Checkbox_redstar"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                />
            <CheckBox
                android:id="@+id/star3"
                android:layout_width="25dp"
                android:layout_height="25dp"
                style="@style/Checkbox_redstar"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                />
            <CheckBox
                android:id="@+id/star4"
                android:layout_width="25dp"
                android:layout_height="25dp"
                style="@style/Checkbox_redstar"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/star_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:layout_marginBottom="12dp"
            android:background="@android:color/white"
            android:gravity="center"
            android:text="优秀"/>
    </LinearLayout>


    <TextView android:id="@+id/appraise_remark"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:background="@android:color/white"
        android:textColor="@android:color/black"
        android:text="ss"/>


    <LinearLayout
        android:id="@+id/appraise_detail_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:text="@string/appraise_detail"
            android:gravity="center"
            android:textSize="13sp"
            android:background="@color/user_detail_background"
            android:id="@+id/textView2"
            android:layout_gravity="center_horizontal" />

        <FrameLayout android:id="@+id/edit_container"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@android:color/white">
            <EditText
                android:id="@+id/appraise_content"
                android:layout_width="match_parent"
                android:paddingLeft="15dp"
                android:paddingTop="10dp"
                android:layout_height="100dp"
                android:hint="啊哦，您对该用户做出了差评的评价，请说明下理由"
                android:text=""/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/content_text_count"
                android:id="@+id/appraise_text_count_tip"
                android:textSize="13sp"
                android:textColor="#beb5b8"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="15dp"
                android:layout_marginEnd="15dp"
                android:layout_gravity="right|bottom" />

        </FrameLayout>
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="提交"
        android:id="@+id/submit"
        style="@style/FormOrangeButton"
        android:paddingRight="80dp"
        android:paddingLeft="80dp"
        android:textSize="15sp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="*评价完成后不能变更"
        android:textSize="15sp"
        android:textColor="#999"
        android:layout_gravity="center_horizontal" />

</LinearLayout>
