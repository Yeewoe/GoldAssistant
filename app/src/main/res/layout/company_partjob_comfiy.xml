<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/body_color"
    android:orientation="vertical"
    android:descendantFocusability="blocksDescendants" >
<!-- android:descendantFocusability="blocksDescendants"防止点击每一个item的时候没有反应，无法获取的焦点-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/body_color"
        android:orientation="horizontal"
        android:paddingBottom="12dip"
        android:paddingLeft="10dip"
        android:paddingTop="12dip" >

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.8"
            android:orientation="vertical"
            android:paddingLeft="5dip" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/comfiy_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dip"
                    android:text="珍爱集团礼仪接待"
                    android:textSize="@dimen/fontsize_36px" />

                <TextView
                    android:id="@+id/comfiy_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/bord"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="已满员"
                    android:textColor="@color/body_color"
                    android:textSize="@dimen/menu_setting"
                    android:visibility="visible" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dip" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="总数"
                    android:textColor="@color/ziti_huise"
                    android:textSize="@dimen/menu_setting" />

                <TextView
                    android:id="@+id/total_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dip"
                    android:text="10"
                    android:textColor="@color/head_color"
                    android:textSize="@dimen/menu_setting" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="30dip"
                    android:text="已确认"
                    android:textColor="@color/ziti_huise"
                    android:textSize="@dimen/menu_setting" />

                <TextView
                    android:id="@+id/cim_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dip"
                    android:text="8"
                    android:textColor="@color/head_color"
                    android:textSize="@dimen/menu_setting" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/cancel_enter"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.1"
            android:src="@drawable/btn_go" />
    </LinearLayout>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="@color/bottom_line" />

</LinearLayout>