<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/body_color"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" 
            android:orientation="vertical"
            android:paddingBottom="80dp"
            >

            <include
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                layout="@layout/common_top" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="充值金额" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/ziti_huise" />

            <RadioGroup
                android:id="@+id/orderBy1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/cz_five"
                    style="@style/chargepaddingtype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:background="@drawable/button_selector_checked_bg"
                    android:button="@null"
                    android:gravity="center"
                    android:text="5元"
                    android:textColor="@drawable/selector_setting_txt"
                    android:textSize="@dimen/myjianli" />

                <RadioButton
                    android:id="@+id/cz_ten"
                    style="@style/chargepaddingtype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_weight="0.3"
                    android:background="@drawable/button_selector_checked_bg"
                    android:button="@null"
                    android:gravity="center"
                    android:text="10元"
                    android:textColor="@drawable/selector_setting_txt"
                    android:textSize="@dimen/myjianli" />

                <RadioButton
                    android:id="@+id/cz_twenty"
                    style="@style/chargepaddingtype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_weight="0.3"
                    android:background="@drawable/button_selector_checked_bg"
                    android:button="@null"
                    android:gravity="center"
                    android:text="20元"
                    android:textColor="@drawable/selector_setting_txt"
                    android:textSize="@dimen/myjianli" />
            </RadioGroup>

            <RadioGroup
                android:id="@+id/orderBy2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/cz_fifty"
                    style="@style/chargepaddingtype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:background="@drawable/button_selector_checked_bg"
                    android:button="@null"
                    android:gravity="center"
                    android:text="50元"
                    android:textColor="@drawable/selector_setting_txt"
                    android:textSize="@dimen/myjianli" />

                <RadioButton
                    android:id="@+id/cz_hundred"
                    style="@style/chargepaddingtype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_weight="0.3"
                    android:background="@drawable/button_selector_checked_bg"
                    android:button="@null"
                    android:gravity="center"
                    android:text="100元"
                    android:textColor="@drawable/selector_setting_txt"
                    android:textSize="@dimen/myjianli" />

                <RadioButton
                    android:id="@+id/cz_twohundred"
                    style="@style/chargepaddingtype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_weight="0.3"
                    android:background="@drawable/button_selector_checked_bg"
                    android:button="@null"
                    android:gravity="center"
                    android:text="200元"
                    android:textColor="@drawable/selector_setting_txt"
                    android:textSize="@dimen/myjianli" />
            </RadioGroup>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginTop="25dp"
                android:background="@color/ziti_huise" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="支付方式" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/ziti_huise" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bord_saixun" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:layout_marginTop="3dp"
                        android:src="@drawable/alipay" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="支付宝支付" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/btn_checkbox_on" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginTop="25dp"
                android:background="@color/ziti_huise" />

            <Button
                android:id="@+id/submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@drawable/btn_hangingcolor_orange"
                android:text="   确认支付    "
                android:textColor="#ffffff"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/bootm_line"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginTop="25dp"
                android:background="@color/ziti_huise" />

            <TextView
                android:id="@+id/log_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="充值记录" />

            <com.quark.ui.widget.ListViewForScrollView
                android:id="@+id/recharge_list"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:orientation="vertical" 
                android:divider = "@color/body_color"
                >
            </com.quark.ui.widget.ListViewForScrollView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>